        <Skeleton className="h-20 w-20 rounded-full" />
        
        {/* Profile info */}
        <div className="flex-1 space-y-4">
          <div className="space-y-2">
            <Skeleton className="h-6 w-40" />
            <Skeleton className="h-4 w-32" />
          </div>
          
          <div className="space-y-2">
            <Skeleton className="h-4 w-full" />
            <Skeleton className="h-4 w-3/4" />
          </div>
          
          <div className="flex space-x-4">
            <Skeleton className="h-8 w-20" />
            <Skeleton className="h-8 w-24" />
          </div>
        </div>
      </div>
    </Card>
  )
}

// Navigation skeleton
export function NavigationSkeleton({
  items = 6,
  variant = AnimationMode.PULSE,
  className,
  ...props
}: Omit<EnhancedSkeletonProps, 'type'> & { items?: number }) {
  return (
    <div className={cn('space-y-2', className)}>
      {Array.from({ length: items }).map((_, i) => (
        <div 
          key={i} 
          className={cn(
            'flex items-center space-x-3 p-3 rounded-lg',
            variant === AnimationMode.STAGGERED && 'animate-fade-in'
          )}
          style={{ 
            animationDelay: variant === AnimationMode.STAGGERED ? `${i * 50}ms` : undefined 
          }}
        >
          <Skeleton className="h-5 w-5" />
          <Skeleton className="h-4 w-24" />
          <div className="flex-1" />
          <Skeleton className="h-4 w-8" />
        </div>
      ))}
    </div>
  )
}

// Timeline skeleton
export function TimelineSkeleton({
  items = 5,
  variant = AnimationMode.STAGGERED,
  className,
  ...props
}: Omit<EnhancedSkeletonProps, 'type'> & { items?: number }) {
  return (
    <div className={cn('space-y-6', className)}>
      {Array.from({ length: items }).map((_, i) => (
        <div 
          key={i} 
          className={cn(
            'flex space-x-4',
            variant === AnimationMode.STAGGERED && 'animate-fade-in'
          )}
          style={{ 
            animationDelay: variant === AnimationMode.STAGGERED ? `${i * 150}ms` : undefined 
          }}
        >
          {/* Timeline dot */}
          <div className="flex flex-col items-center">
            <Skeleton className="h-3 w-3 rounded-full" />
            {i < items - 1 && <Skeleton className="h-16 w-px mt-2" />}
          </div>
          
          {/* Content */}
          <div className="flex-1 space-y-2 pb-6">
            <div className="flex items-center justify-between">
              <Skeleton className="h-4 w-32" />
              <Skeleton className="h-3 w-16" />
            </div>
            <Skeleton className="h-4 w-full" />
            <Skeleton className="h-4 w-5/6" />
            <div className="flex space-x-2 pt-2">
              <Skeleton className="h-6 w-16" />
              <Skeleton className="h-6 w-20" />
            </div>
          </div>
        </div>
      ))}
    </div>
  )
}

// Unified skeleton component factory
export function EnhancedSkeleton({
  type,
  variant = AnimationMode.PULSE,
  count = 1,
  delay = 0,
  className,
  ...props
}: EnhancedSkeletonProps) {
  const skeletonProps = {
    variant,
    count,
    delay,
    className,
    ...props
  }

  const skeletonMap = {
    [SkeletonType.LIST]: () => <EnhancedListSkeleton {...skeletonProps} />,
    [SkeletonType.CARD]: () => <EnhancedCardSkeleton {...skeletonProps} />,
    [SkeletonType.TABLE]: () => <EnhancedTableSkeleton {...skeletonProps} />,
    [SkeletonType.DASHBOARD]: () => <DashboardSkeleton {...skeletonProps} />,
    [SkeletonType.FORM]: () => <FormSkeleton {...skeletonProps} />,
    [SkeletonType.PROFILE]: () => <ProfileSkeleton {...skeletonProps} />,
    [SkeletonType.NAVIGATION]: () => <NavigationSkeleton {...skeletonProps} />,
    [SkeletonType.TIMELINE]: () => <TimelineSkeleton {...skeletonProps} />
  }

  const SkeletonComponent = skeletonMap[type]
  
  if (!SkeletonComponent) {
    throw new Error(`Unknown skeleton type: ${type}`)
  }

  // Handle multiple instances
  if (count > 1) {
    return (
      <div className="space-y-4">
        {Array.from({ length: count }).map((_, i) => (
          <div
            key={i}
            style={{ 
              animationDelay: delay > 0 ? `${delay * i}ms` : undefined 
            }}
          >
            <SkeletonComponent />
          </div>
        ))}
      </div>
    )
  }

  return <SkeletonComponent />
}

// Custom animation utilities
export function useSkeletonAnimations() {
  const [isAnimating, setIsAnimating] = useState(false)

  const triggerAnimation = () => {
    setIsAnimating(true)
    setTimeout(() => setIsAnimating(false), 2000)
  }

  return {
    isAnimating,
    triggerAnimation
  }
}

